{
  "name": "familymarkup",
  "displayName": "FamilyMarkup",
  "description": "Language server for FamilyMarkup",
  "version": "1.0.0",
  "repository": "github:redexp/vscode-familymarkup",
  "main": "./client/extension",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "familymarkup",
        "aliases": [
          "FamilyMarkup",
          "familymarkup"
        ],
        "extensions": [
          ".fml",
          ".family"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "familymarkup",
        "scopeName": "source.family",
        "path": "./syntaxes/familymarkup.tmLanguage.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "families",
          "name": "Families"
        }
      ]
    },
    "configuration": {
      "title": "FamilyMarkup",
      "properties": {
        "familymarkup.locale": {
          "type": "string",
          "default": "editor",
          "enum": [
            "editor",
            "uk",
            "ru",
            "en"
          ],
          "enumItemLabels": [
            "Current editor locale",
            "Українська",
            "Русский",
            "English"
          ]
        }
      }
    }
  },
  "configurationDefaults": {
    "[familymarkup]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0"
  }
}
